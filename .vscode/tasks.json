{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "compile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch:esbuild",
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started",
					"endsPattern": "^\\[watch\\] build finished"
				}
			}
		}
	]
}
