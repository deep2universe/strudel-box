{
  "name": "strudel-box",
  "displayName": "strudel_box",
  "description": "Code your beats. Visualize your sound. Share your vibe.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "strudel-box.open",
        "title": "Strudel Box: Open Player"
      },
      {
        "command": "strudel-box.hush",
        "title": "Strudel Box: Hush (Stop Audio)"
      },
      {
        "command": "strudel-box.loadFile",
        "title": "Strudel Box: Load File"
      },
      {
        "command": "strudel-box.setTheme",
        "title": "Strudel Box: Set Theme"
      },
      {
        "command": "strudel-box.save",
        "title": "Strudel Box: Save Pattern"
      },
      {
        "command": "strudel-box.openInRepl",
        "title": "Open in Strudel Box"
      },
      {
        "command": "strudel-box.focusExplorer",
        "title": "Strudel Box: Open File Explorer"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "strudel-box.explorer",
          "name": "Strudel Player",
          "icon": "$(music)",
          "contextualTitle": "Strudel Player"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "strudel-box.explorer",
        "contents": "No .strudel files found in workspace.\n[Create a Pattern](command:strudel-box.open)"
      }
    ],
    "iconThemes": [
      {
        "id": "strudel-icons",
        "label": "Strudel Icons",
        "path": "./icons/strudel-icon-theme.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "strudel-box.openInRepl",
          "when": "resourceExtname == .strudel",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "strudel-box.openInRepl",
          "when": "resourceExtname == .strudel",
          "group": "navigation"
        }
      ]
    },
    "themes": [
      {
        "label": "Strudel Box - Cyberpunk",
        "uiTheme": "vs-dark",
        "path": "./themes/cyberpunk-color-theme.json"
      },
      {
        "label": "Strudel Box - Halloween",
        "uiTheme": "vs-dark",
        "path": "./themes/halloween-color-theme.json"
      },
      {
        "label": "Strudel Box - 8-Bit",
        "uiTheme": "vs-dark",
        "path": "./themes/8bit-color-theme.json"
      }
    ],
    "languages": [
      {
        "id": "strudel",
        "aliases": ["Strudel", "strudel"],
        "extensions": [".strudel"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "strudel",
        "scopeName": "source.strudel",
        "path": "./syntaxes/strudel.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "strudel-box.strudelEditor",
        "displayName": "Strudel Box REPL",
        "selector": [
          {
            "filenamePattern": "*.strudel"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
